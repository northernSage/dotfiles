#!/bin/bash

if [[ "$OSTYPE" == "darwin"* ]]; then
    ln -sf "$PWD/bashconfig/macos" ~/.bashrc
elif [[ "$OSTYPE" == "linux-gnu"* ]]; then
    ln -sf "$PWD/bashconfig/linux" ~/.bashrc
fi

ls -l ~/.bashrc

ln -sf "$PWD/vimrc" ~/.vimrc
ls -l ~/.vimrc

ln -sf "$PWD/dircolors" ~/.dircolors
ls -l ~/.dircolors

ln -sf "$PWD/tmuxconfig" ~/.tmux.conf
ls -l ~/.tmux.conf
